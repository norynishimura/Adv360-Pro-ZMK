macro_up_slash_mm: up_slash_mod_morph {
compatible = "zmk,behavior-mod-morph";
label = "macro_up_slash_mm";
#binding-cells = <0>;
bindings = <&kp UP>, <&kp SLASH>;
mods = <(MOD_LGUI|MOD_LSFT|MOD_LCTL|MOD_LALT|MOD_RGUI|MOD_RSFT|MOD_RCTL|MOD_RALT)>;
keep-mods = <(MOD_LSFT|MOD_RSFT)>;
};
